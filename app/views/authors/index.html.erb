<h1>Authors</h1>

<br/>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th>Books</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.img %></td>
        <td>
        	<% author.books.each do |book| %>
        	<ul>
						<li><%= book.title %></li> 
					</ul>
					<% end %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
